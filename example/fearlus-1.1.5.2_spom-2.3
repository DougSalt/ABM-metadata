#!/usr/bin/env bash

echo $0: Entering...
echo ARGUMENTS $@
count=0
top=300
run=$(echo $@ | sed 's/^.*\([0-9][0-9][0-9]\).repcfg.*/\1/')
while [ $count -lt $top ]
do
	sleep 2
	echo $0: Sleeping...
	count=$(($count + 1))
done
touch $(echo $(basename $PWD) | sed 's/SSS_dir_//')$run.out
touch $(echo $(basename $PWD) | sed 's/SSS_dir_//')$run.err
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_report_/')$run.txt
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_report_/')$run.grd
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_spomresult_/')$run-prop.csv
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_spomresult_/')$run-nspp.csv
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_spomresult_/')$run-lspp.csv
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_spomresult_/')$run-extinct.csv
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_spomresult_/')$run-pspp.csv
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_spomresult_/')$run-habgrid.csv
touch $(echo $(basename $PWD) | sed 's/SSS_dir_/SSS_spomresult_/')$run-area.csv
echo $0: ...Exit.
